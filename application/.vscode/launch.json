{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: RAD",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "FLASK_DEBUG": "true",
                "FULLSCREEN": "false",
                "LOG_LEVEL": "DEBUG",
                "WEBKIT_DISABLE_COMPOSITING_MODE": "true",
            }
        },
        {
            "name": "Python: RAD With Webview Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "FLASK_DEBUG": "true",
                "FULLSCREEN": "false",
                "LOG_LEVEL": "DEBUG",
                "WEBVIEW_DEBUG": "true",
                "WEBKIT_DISABLE_COMPOSITING_MODE": "true",
            }
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Run Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-v",
                "tests/"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}
